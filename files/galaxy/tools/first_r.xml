<tool id="ggplot_first_script" name="First ggplot skript" version="0.1.0">
    <description>Just draws some dots</description>
    <requirements>
    <requirement type="package" version="4.5.1">r-base</requirement>
    <requirement type="package" version="4.0.0">r-ggplot2</requirement>
    <requirement type="package" version="2.2.2">r-svglite</requirement>
    </requirements>
    
    <command detect_errors="exit_code"><![CDATA[

      Rscript '$__tool_directory__/first_r.R' > '$output'
      cat '$input'
    ]]></command>
    <inputs>
      <param name="input" type="text" label="just some text to test"/>
    </inputs>
    <outputs>
      <data format="tabular" name="output" label="${tool.name} on ${on_string}" from_work_dir="*.tab"/>
    </outputs>

    <help><![CDATA[
    Insert a list of column headers (comma-delimited) as the first row of a data table.  
    ]]></help>
     <citations>
    </citations>
</tool>
